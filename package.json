{
  "name": "corrum",
  "version": "0.1.0",
  "description": "Corrum CLI and library for orchestrating multi-agent AI code reviews",
  "private": true,
  "type": "module",
  "bin": {
    "corrum": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --dts --sourcemap --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "dev": "npx tsx src/cli.ts",
    "prepare": "npm run build",
    "local:install": "npm run build && npm link",
    "local:uninstall": "npm unlink corrum"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^3.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "date-fns": "^3.0.0",
    "micromatch": "^4.0.5",
    "ora": "^8.0.0",
    "xstate": "^5.0.0",
    "zod": "^3.22.0",
    "better-sqlite3": "^9.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/micromatch": "^4.0.6",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  }
}
